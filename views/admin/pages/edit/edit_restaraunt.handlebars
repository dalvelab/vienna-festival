<section class="crud-program">
  <h2 class="section-title">Редактировать  <span class="font-red">Ресторанный Дворик</span></h2>
  <div class="container">
    <form class="crud-form" action="/admin/pages/restaraunt/{{restaraunt.id}}?_method=PUT" method="post" enctype="multipart/form-data">
    <input type="hidden" name="_method" value="PUT">
      <div class="input-group">
        <label for="text">Название страницы</label>
        <input type="text" name="title" value="{{restaraunt.title}}" class="crud-input">
      </div>
      <div class="input-group">
        <label for="text">Баннеры (1920 x 1080 - минимум 4 изображения)</label>
        <input type="file" name="banners" value="{{restaraunt.banners}}" class="crud-input" multiple>
      </div>
      <button class="btn round upper" type="submit">Опубликовать</button>
    </form>
  </div>
</section>